<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="pit">

	<select id="execSpListaEmpresas" statementType="CALLABLE" resultType="EmpresaIbatis">
		call sp_listaEmpresas()		
	</select>
	
	<select id="execSpBuscarEmpresa" statementType="CALLABLE" resultType="EmpresaIbatis">
		call sp_buscarEmpresa( #{codigo} )		
	</select>
	
	<insert id="execSpRegEmpresa" statementType="CALLABLE" parameterType="EmpresaIbatis">
		call sp_regEmpresa( 
			#{ruc_empresa}, 
			#{nom_empresa}, 
			#{telf_empresa}, 
			#{dir_empresa}, 
			#{email_empresa},
			#{cobertura_dep},
			#{logo})
	</insert>
	
	<update id="execSpUptEmpresa" statementType="CALLABLE" parameterType="EmpresaIbatis">	
		call sp_uptEmpresa(
			#{id_emp},
			#{telf_empresa}, 
			#{dir_empresa}, 
			#{email_empresa})	
	</update>
	
	

</mapper>